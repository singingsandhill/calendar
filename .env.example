DB_USERNAME=id
DB_PASSWORD=pw

# 러너 관리자 계정
RUNNER_ADMIN_USERNAME=admin
RUNNER_ADMIN_PASSWORD=admin123

# 트레이딩 봇 설정 (Bithumb)
BITHUMB_ACCESS_KEY=your_access_key_here
BITHUMB_SECRET_KEY=your_secret_key_here
TRADING_BOT_ENABLED=false

# 주식 트레이딩 봇 설정 (한국투자증권)
